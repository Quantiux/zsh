# Basic aliases
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias c='clear'
alias m='less -r'
alias md='mkdir'
alias rd='rmdir'
alias q='clear;exit'
alias ls='ls -hF --color'
alias ll='ls -Al --color'
alias la='ls -A --color'
alias l='ls -l --color'
alias df='df -h'
alias du='du -h --max-depth=1'
alias f='free -h'
alias reboot='sudo reboot now'
alias ipublic='curl ifconfig.co'
alias iprivate='hostname -I | cut -d" " -f1'
alias coredump='ll /var/lib/systemd/coredump'

# Package aliases
alias update='sudo apt update'
alias upgradable='sudo apt list --upgradable'
alias upgrade='sudo apt update && sudo apt upgrade -y'
alias clean='sudo apt autoclean && sudo apt autoremove -y'

# Application aliases
alias so='source ~/.config/zsh/.zshrc'
alias v='nvim.appimage'
alias vdiff='nvim.appimage -d'
alias vs='nvim.appimage --startuptime >(tail -n1)'
alias tx='tmux'
alias py='python'
alias ipy='pipenv run ipython'
alias i='inxi -Fxxxrz'
alias t='htop'
alias R='R --save'
alias n='neofetch'
alias s='sensors'
alias y='yt-dlp'
alias yx='yt-dlp -x --audio-format mp3 --prefer-ffmpeg'
alias yxp='yt-dlp -x --audio-format mp3 --prefer-ffmpeg --yes-playlist'
alias ffprobe='ffprobe -v error -select_streams v:0 -show_entries stream=width,height -of csv=s=x:p=0'
alias p='auto-cpufreq --stats'
alias gparted='sudo gparted'
alias pia='/opt/piavpn/bin/pia-client %u'
alias nbook2='ssh 192.168.4.26'
alias nbook3='ssh 192.168.4.29'
alias pc='ssh 192.168.4.25'
alias ubuntu='ssh 10.0.0.105'
alias mount_pc='sshfs roy@192.168.4.25:/home/roy ~/PC'
alias umount_pc='fusermount -u ~/PC'
alias mount_nbook2='sshfs roy@192.168.4.26:/home/roy ~/Nbook2'
alias umount_nbook2='fusermount -u ~/Nbook2'
alias mount_nbook3='sshfs roy@192.168.4.29:/home/roy ~/Nbook3'
alias umount_nbook3='fusermount -u ~/Nbook3'

# Alias for R.nvim plugin (https://github.com/R-nvim/R.nvim)
alias r='R_AUTO_START=true nvim'

